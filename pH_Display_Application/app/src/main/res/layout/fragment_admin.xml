<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragment">

    <LinearLayout
        android:background="@color/bg_simulate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="20dp"
            >

            <Button
                android:layout_margin="2dp"
                android:id="@+id/admin_btn_relay1"
                android:text="Toggle\nRelay1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                />
            <Button
                android:layout_margin="2dp"
                android:id="@+id/admin_btn_relay2"
                android:text="Toggle\nRelay2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/admin_btn_relay3"
                android:text="Toggle\nRelay3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"/>

            <Button
                android:layout_margin="2dp"
                android:id="@+id/admin_btn_relay4"
                android:text="Toggle\nRelay4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                />
            <Button
                android:layout_margin="2dp"
                android:id="@+id/admin_btn_relay5"
                android:text="Toggle\nRelay5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/admin_btn_relay6"
                android:text="Toggle\nRelay6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"/>



        </GridLayout>

    </LinearLayout>

</FrameLayout>