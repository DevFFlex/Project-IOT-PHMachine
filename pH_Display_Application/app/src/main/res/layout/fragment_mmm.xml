<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonitorFragmentObject.MMain">

    <FrameLayout

        android:visibility="visible"
        android:background="@color/bg"
        android:id="@+id/monitor_layout_step2"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingHorizontal="20sp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/iv_status_step1"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@drawable/status_circle_red"/>

            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="20sp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ั้"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_status_step2"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@drawable/status_circle_red"/>

            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="20sp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ั้"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_status_step3"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@drawable/status_circle_red"/>

            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="20sp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_status_step4"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:background="@drawable/status_circle_red"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/step3_btnMeterBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/step3_btnMeterNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>