<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/bg_layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_width="0sp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="เวลา"
                android:textSize="15dp"
                android:textColor="#FFFF"
                android:paddingHorizontal="10dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/item_workTimerView_tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="30sp"
                    android:textColor="#53E65A"
                    android:textStyle="bold"
                    android:paddingHorizontal="20dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#3A3737"/>

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="PH"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_workTimerView_tvPH"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:background="#AE0392DF"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/item_workTimerView_tvT"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:background="#AE0392DF"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0sp"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ActiveStatus"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/item_workTimerView_ivAS"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/status_circle_green"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/item_workTimerView_btnEdit"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Edit"
                android:textSize="20dp"
                android:textColor="#FFFF"
                android:background="@drawable/btn_style2"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>